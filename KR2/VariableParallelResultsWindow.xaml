<Window x:Class="KR2.VariableParallelResultsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Результаты запуска по переменной"
        Height="560"
        Width="1200"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="SummaryTextBlock" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,10"/>

        <DataGrid x:Name="ResultsGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Значение переменной" Binding="{Binding VariableValue}" Width="120"/>
                <DataGridTextColumn Header="Вероятность потери области, %" Binding="{Binding LossProbabilityPercent}" Width="170"/>
                <DataGridTextColumn Header="Потерь (шт.)" Binding="{Binding LossCount}" Width="95"/>
                <DataGridTextColumn Header="Ср. видимых объектов" Binding="{Binding AvgPointCount}" Width="120"/>
                <DataGridTextColumn Header="Ср. площадь области" Binding="{Binding AvgHullArea}" Width="120"/>
                <DataGridTextColumn Header="Ср. площадь ист. области" Binding="{Binding AvgTrueHullArea}" Width="140"/>
                <DataGridTextColumn Header="Ср. отклонение центра" Binding="{Binding AvgCenterDelay}" Width="130"/>
                <DataGridTextColumn Header="Ср. пересечение, %" Binding="{Binding AvgIntersectionArea}" Width="120"/>
                <DataGridTextColumn Header="Ср. время потери, c" Binding="{Binding AvgLossTime}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
